# 应用基础配置
BASE_URL="http://localhost:3000" # 服务器基础 URL
MACHINE_ID=1                     # 雪花算法机器 ID，默认为 1

# Redis 配置（可选）
REDIS_URL="redis://localhost:6379" # Redis 连接地址

# PostgreSQL 数据库配置
DATABASE_URL="postgres://user:password@localhost:5432/dbname" # 数据库连接字符串
DATABASE_SSL=false                                            # 是否启用 SSL，true/false

# 邮件 SMTP 配置
EMAIL_HOST="smtp.example.com"   # SMTP 服务器地址
EMAIL_PORT=587                  # SMTP 服务器端口，通常为 587 或 465
EMAIL_SECURE=false              # 是否启用 SSL/TLS，true/false
EMAIL_USER="your_smtp_user"     # SMTP 用户名
EMAIL_PASS="your_smtp_password" # SMTP 密码
EMAIL_FROM="your@email.com"     # 发件人邮箱地址
